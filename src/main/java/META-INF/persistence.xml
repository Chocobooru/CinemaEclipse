			com.cinemaeclipse.model.Utente
		</class>
		<class>
			com.cinemaeclipse.model.Spettacolo
		</class>
		<class>
			com.cinemaeclipse.model.Ruolo
		</class>
		<class>
			com.cinemaeclipse.model.Pagamento
		</class>
		<class>
			com.cinemaeclipse.model.Sala
		</class>
		<class>
			com.cinemaeclipse.model.Prenotazione
		</class>
		
        <properties>
            <property name="javax.persistence.jdbc.Driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/cinemaeclipse"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
